@model IEnumerable<LibraryManagement.Models.Domain.Book>
@{
}

<div class="container pt-3">
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-dark" href="/Book/Add">+ Thêm sách</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Danh sách sách trong thư viện</h3>

            <table  class="table table-stripped table-bordered table-dark">
                <thead>
                    <tr>
                        <th>Tên sách</th>
                        <th>Thể loại</th>
                        <th>Mã số</th>
                        <th>Tổng số trang</th>
                        <th>Tác giả</th>
                        <th>Nhà xuất bản</th>
                        <th>Xử lý</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                            <td>@item.Title</td>
                            <td>@item.GenreName</td>
                            <td>@item.Isbn</td>
                            <td>@item.TotalPages</td>
                            <td>@item.AuthorName</td>
                            <td>@item.PublisherName</td>
                        <td>
                                <a class="btn" href="/Book/Update?id=@item.Id"><i class="bi bi-pen"></i> Sửa</a> |
                                <a class="btn" onclick="return window.confirm('Bạn chắc chứ?')" href="/Book/Delete?id=@item.Id"><i class="bi bi-trash"></i> Xóa</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

