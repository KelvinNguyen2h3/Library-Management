<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#"> Quản lý thư viện</a>
        <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <a href="/Home/Index" class="nav-link" title="Thành viên nhóm">Admin</a>
            </li>
            <li class="nav-item">
                <a href="/Genre/Add" class="nav-link" title="Quản lý danh sách thể loại">Thể loại</a>
            </li>
            <li class="nav-item">
                <a href="/Author/Add" class="nav-link" title="Quản lý danh sách tác giả">Tác giả</a>
            </li>
            <li class="nav-item active">
                <a href="/Publisher/Add" class="nav-link" title="Quản lý danh sách nhà xuất bản">Nhà xuất bản</a>
            </li>

            <li class="nav-item">
                <a href="/Book/Add" class="nav-link" title="Quản lý sách trong thư viện">Sách</a>
            </li>
        </ul>

    </nav>
    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>